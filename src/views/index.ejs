<% include ./partials/header %>

<h1>Purchase Avocado Policy</h1>

<form action="/" method="post">

  <div class="row">
    <div class="form-group col-md-6">
      <label for="name">Name</label>
      <input class="form-control" type="text" name="name" placeholder="Name" required/><br />
    </div>
    <div class="form-group col-md-6">
      <label for="phonenumber">Phone Number</label>
      <input class="form-control" type="text" name="phonenumber" placeholder="Phone Number" required/><br />
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <label for="ethaddress">Ethereum Address</label>
      <input class="form-control" type="text" name="ethaddress" placeholder="Ethereum Address" required/><br />
    </div>
    <div class="form-group col-md-6">
      <label for="premium">Premium</label>
      <input class="form-control" type="text" name="premium" placeholder="Insurance Premium" required/><br />
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <label for="technique">Farming Technique</label>
      <input class="form-control" type="text" name="technique" placeholder="Farming Technique" required/><br />
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <label for="size">Size of Farm (acres)</label>
      <input class="form-control" type="text" name="size" placeholder="Size of Farm (acres)" required/><br />
    </div>
    <div class="form-group col-md-6">
      <label for="experience">Years of Farming Experience</label>
      <input class="form-control" type="text" name="experience" placeholder="Years of Farming Experience" required/><br />
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <label for="region">Region</label>
      <input class="form-control" type="text" name="region" placeholder="Region" required/><br />
    </div>
    <div class="form-group col-md-6">
      <label for="elevation">Elevation</label>
      <input class="form-control" type="text" name="elevation" placeholder="Elevation" required/><br />
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <label for="longitude">Longitude</label>
      <input class="form-control" type="text" name="longitude" placeholder="Longitude" required/><br />
    </div>

    <div class="form-group col-md-6">
      <label for="latitude">Latitude</label>
      <input class="form-control" type="text" name="latitude" placeholder="Latitude" required/><br />
    </div>
  </div>

  <button class="btn btn-primary" name="submit">Submit</button>

</form>


<% include ./partials/footer %>
